<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
   app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:paddingRight="8dp"
                android:text="16.02.0250"
                android:textColor="#F35146"
                android:textSize="8sp" />
        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_shopping_cart"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingBottom="8dp"
                android:text="Mogra Rice"
                android:textColor="#F35146"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="0dp"
                android:gravity="start">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="#F35146"
                    app:cardCornerRadius="5dp">
                <ImageButton
                    android:id="@+id/button_decrement"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_remove_white"
                     />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/textView_count"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:gravity="center"
                    android:textSize="20sp"


                    android:textColor="#F35146"

                    android:text="0" />
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="#F35146"
                    app:cardCornerRadius="5dp">
                <ImageButton
                    android:id="@+id/button_increment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_add_white"
                     />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>